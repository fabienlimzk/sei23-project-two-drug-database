<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/custom.css" />

    <script src="/js/jquery.min.js"></script>
    <title>Drug Database</title>
    <style>
      .stayEnd {
        display: flex;
        /* justify-content: center; */
        align-items: flex-end;
      }
      .alert {
        margin-bottom: 0 !important;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
      <a class="navbar-brand" href="/">Drug Database</a>
      <!-- <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button> -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <% if (currentUser) { %>
            <li class="nav-item">
              <a class="nav-link" href="/create">Create New Drug</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/">Intro</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/profile/<%= currentUser._id %>">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout">Logout</a>
            </li>
          <% } else if (!currentUser) { %>
            <li class="nav-item">
              <a class="nav-link" href="/create">Create New Drug</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/">Intro</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/login">Login</a>
            </li>
          <% } %>
        </ul>
      </div>
    </nav>
    <% if (alerts.success) { %> 
      <% alerts.success.forEach(function (msg){ %>
        <div class="alert alert-success">
          <%= msg %>
        </div>
      <% }); %> 
    <% } %> 
    <% if (alerts.error) { %> 
      <% alerts.error.forEach(function (msg){ %>
        <div class="alert alert-danger">
          <%= msg %>
        </div>
      <% }); %> 
    <% } %>
    <br>
