<div class="container mt-3">
  <h2>Edit Information for <%= drug.name %></h2>
  <form action="/edit/<%= drug._id %>" method="POST" enctype="multipart/form-data">
    <% if (drug.imageUrl) { %>
      <img src="<%= drug.imageUrl %>" alt="image">
      <div>
        <label>Drug Name: </label>
        <input name="name" type="text" value="<%= drug.name %>" />
      </div>
      <div>
        <label>Drug Class: </label>
        <input name="drugClass" type="text" value="<%= drug.drugClass %>" />
      </div>
      <div>
        <label>Recommended Dose: </label>
        <input name="recommendedDose" type="text" value="<%= drug.recommendedDose %>" />
      </div>
      <div>
        <label>Description: </label>
        <input name="description" type="text" value="<%= drug.description %>" />
      </div>
      <div>
        <label style="color: red">Image already uploaded!</label>
      </div>
    <% } else { %>
      <label style="color: red">No image uploaded yet!</label>
      <div>
        <label>Drug Name: </label>
        <input name="name" type="text" value="<%= drug.name %>" />
      </div>
      <div>
        <label>Drug Class: </label>
        <input name="drugClass" type="text" value="<%= drug.drugClass %>" />
      </div>
      <div>
        <label>Recommended Dose: </label>
        <input name="recommendedDose" type="text" value="<%= drug.recommendedDose %>" />
      </div>
      <div>
        <label>Description: </label>
        <input name="description" type="text" value="<%= drug.description %>" />
      </div>
      <div>
        <label>Upload Image: </label>
        <input name="imageUrl" type="file" value="<%= drug.imageUrl %>" />
      </div>
    <% } %>
    <br>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>